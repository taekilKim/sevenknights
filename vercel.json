{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/heroes", "dest": "/server.js" },
    { "src": "/hero", "dest": "/hero.html" },
    { "src": "/hero/(.*)", "dest": "/hero.html" },
    { "src": "/", "dest": "/index.html" }
  ]
}